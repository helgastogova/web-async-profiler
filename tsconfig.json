{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@ui": ["src/ui/index.ts"],
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"],
      "@ui/hooks": ["src/ui/hooks/index.ts"],
      "@ui/icons": ["src/ui/icons/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/server/index.js",
    "src/ui/icons/index.ts"
  ],
  "exclude": ["node_modules"]
}
